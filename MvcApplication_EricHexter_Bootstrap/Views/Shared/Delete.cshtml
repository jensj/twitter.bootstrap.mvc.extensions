@using BootstrapSupport
@model Object
@using (Html.BeginForm())
{
    @Html.Hidden(@Model.IdentifierPropertyName(),@Model.GetIdValue())
    <fieldset>
        <legend>@Model.GetLabel() <small>Delete</small></legend>
        <dl class="dl-horizontal"   > <!-- use this class on the dl if you want horizontal styling http://twitter.github.com/bootstrap/base-css.html#typography  class="dl-horizontal"-->     
            @foreach (var property in Model.VisibleProperties())
            {
                <dt>
                    @property.GetLabel().ToSeparatedWords()
                </dt>
                <dd>
                    @Html.Display(property.Name)                
                </dd>
            }
        </dl>
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn">Cancel</a>
        </div>
    </fieldset>
}
<p>
    @Html.ActionLink("Edit", "Edit", Model.GetIdValue()) |
    @Html.ActionLink("Back to List", "Index")
</p>
